<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Single-Line Arrow Function</title>
</head>
<body>

    <header>
        <h1>Single-Line Arrow Function Example</h1>
    </header>

    <main>
        <p id="output"></p>
    </main>

    <script>
        // Single-line arrow function with parameters
        const square = (number) => number * number;

        // Example usage
        const input = 5;
        const result = square(input);

        // Display the result in the output paragraph
        document.getElementById('output').textContent = `The square of ${input} is ${result}.`;
    </script>

</body>
</html>
